        </EditText>

        <EditText
            android:id="@+id/trans3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:gravity="top|left"
            android:textSize="15dp"
            android:ems="10"
